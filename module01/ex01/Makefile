CLEAN_COLOR		=	\033[38;5;153m
COMPILE_COLOR	=	\033[38;5;75m
BOX_COLOR		=	\033[38;5;27m
REMOVE_COLOR	=	\033[38;5;25m
RESET			=	\033[0m

NAME			=	zombiehorde
CC				=	c++
CFLAGS			=	-Wall -Wextra -Werror -std=c++98
SRCS			=	main.cpp Zombie.cpp zombieHorde.cpp
OBJS			=	$(SRCS:.cpp=.o)

all:			$(NAME)

$(NAME):		$(OBJS)
	@echo "$(CLEAN_COLOR)โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ$(RESET)"
	@echo "$(CLEAN_COLOR)โ          Compiling $(NAME)...          โ$(RESET)"
	@$(CC) $(CFLAGS) -o $(NAME) $(OBJS)
	@echo "$(CLEAN_COLOR)โ $(NAME) has been created successfully! โ$(RESET)"
	@echo "$(CLEAN_COLOR)โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ$(RESET)"

%.o:			%.cpp
	@echo "$(COMPILE_COLOR)โถ Compiling: $<$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "$(BOX_COLOR)๐งน Cleaning object files...$(RESET)"
	@rm -f $(OBJS)

fclean:			clean
	@echo "$(REMOVE_COLOR)๐๏ธ  Removing $(NAME)...$(RESET)"
	@rm -f $(NAME)

re:				fclean all

.PHONY:			all clean fclean re