CLEAN_COLOR 	= 	\033[38;5;55m
REMOVE_COLOR 	= 	\033[38;5;56m
COMPILE_COLOR 	= 	\033[38;5;99m
BOX_COLOR 		= 	\033[38;5;141m
RESET 			= 	\033[0m

NAME 			= 	zombie

CC 				= 	c++
CFLAGS 			= 	-Wall -Wextra -Werror -std=c++98

SRCS 			= 	main.cpp Zombie.cpp newZombie.cpp randomChump.cpp
OBJS 			= 	$(SRCS:.cpp=.o)

all: 			$(NAME)

$(NAME): $(OBJS)
	@echo "$(BOX_COLOR)โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ$(RESET)"
	@echo "$(BOX_COLOR)โ        Compiling $(NAME)...                 โ$(RESET)"
	@$(CC) $(CFLAGS) -o $(NAME) $(OBJS)
	@echo "$(BOX_COLOR)โ  $(NAME) has been created successfully!     โ$(RESET)"
	@echo "$(BOX_COLOR)โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ$(RESET)"

%.o: %.cpp
	@echo "$(COMPILE_COLOR)โถ Compiling: $<$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "$(CLEAN_COLOR)๐งน Cleaning object files...$(RESET)"
	@rm -f $(OBJS)

fclean: clean
	@echo "$(REMOVE_COLOR)๐๏ธ  Removing $(NAME)...$(RESET)"
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re